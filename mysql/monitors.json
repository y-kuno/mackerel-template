{
    "monitors": [
        {
            "name": "MySQL Connections Used Rate",
            "type": "host",
            "metric": "custom.mysql.capacity.PercentageOfConnections",
            "operator": ">",
            "warning": 80,
            "critical": 90,
            "duration": 3,
            "maxCheckAttempts": 1
        },
        {
            "name": "MySQL Seconds Behind Master",
            "type": "host",
            "metric": "custom.mysql.seconds_behind_master.Seconds_Behind_Master",
            "operator": ">",
            "warning": 10,
            "critical": 30,
            "duration": 3,
            "maxCheckAttempts": 1
        }
    ]
}
