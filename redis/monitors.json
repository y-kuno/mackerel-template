{
    "monitors": [
        {
            "name": "Redis clients used rate",
            "type": "host",
            "metric": "custom.redis.capacity.percentage_of_clients",
            "operator": ">",
            "warning": 70,
            "critical": 90,
            "duration": 3,
            "maxCheckAttempts": 1
        },
        {
            "name": "Redis CPU idle rate",
            "type": "host",
            "metric": "custom.multicore.cpu.cpu0.idle",
            "operator": ">",
            "warning": 20,
            "critical": 10,
            "duration": 3,
            "maxCheckAttempts": 1
        },
        {
            "name": "Redis memory used rate",
            "type": "host",
            "metric": "custom.redis.capacity.percentage_of_memory",
            "operator": ">",
            "warning": 70,
            "critical": 90,
            "duration": 3,
            "maxCheckAttempts": 1
        }
    ]
}
